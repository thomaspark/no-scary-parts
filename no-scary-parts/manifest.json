{
  "name": "No Scary Parts",
  "short_name": "No Scary Parts",
  "version": "1.1.0",
  "manifest_version": 2,
  "description": "Automatically skip the scary parts of popular family movies on streaming services like Disney+",
  "homepage_url": "https://thomaspark.co/projects/no-scary-parts/",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.disneyplus.com/*"
      ],
      "js": ["app.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
     "webNavigation"
  ],
  "web_accessible_resources": ["data.json"]
}
